model District {
  id            String          @id @default(cuid())
  name          String
  divisionId    String
  centres        Centre[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  division Division @relation(fields: [divisionId], references: [id], onDelete: Cascade)

  @@index([divisionId])
  @@unique([name, divisionId])
}

enum CoursePublish {
  draft
  published
}

model Course {
  id            String          @id @default(cuid())
  categoryId    String
  title         String
  code          String          @unique
  duration      String
  qualification String
  fee           Decimal
  feeBase       Decimal?
  publish       CoursePublish   @default(draft)
  description   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id])

  @@index([code])
}

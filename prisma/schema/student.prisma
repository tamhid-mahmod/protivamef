enum StudentStatus {
  pending
  registered
  rejected
}

model Student {
  id                            String          @id @default(cuid())
  rollNumber                    String          @unique
  imageUrl                      String?
  fullName                      String
  dateOfBirth                   DateTime
  gender                        String
  email                         String?
  phoneNumber                   String?
  address                       String
  religion                      String
  fatherName                    String
  motherName                    String
  status                        StudentStatus  @default(pending)
  iAgree                        Boolean
  studentEducationBackgroundId  String         @unique
  studentAppliedForId           String         @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  educationBackground StudentEducationBackground  @relation(fields: [studentEducationBackgroundId], references: [id], onDelete: Cascade)
  appliedFor          StudentAppliedFor           @relation(fields: [studentAppliedForId], references: [id], onDelete: Cascade)

  @@index([rollNumber])
}
